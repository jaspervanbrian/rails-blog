<% @title = @post.title %>

<div class="container">
	<div class="row">
		<div class="col-12">
			<div class="list-group-item list-group-item-action flex-column align-items-start">
				<div class="d-flex w-100 justify-content-between">
					<h5 class="mb-1"><%= @post.title %></h5>
					<small class="text-muted"><%= @post.created_at.strftime("%B %d, %Y | %A, %l:%M %p") %></small>
				</div>
				<h6 class="d-inline">
					by 
					<%= link_to user_path(@post.user) do %>
						<span class="badge badge-pill badge-danger"><%= @post.user.full_name %></span>
					<% end %>
				</h6>
				<small class="text-muted"><%= @post.created_at === @post.updated_at ? "" : "(Last update: " + @post.created_at.strftime("%B %d, %Y | %A, %l:%M %p") + ")" %></small>
				<% if logged_in? %>
					<% if @current_user.id === @post.user_id %>
						<div class="float-right">
							<%= link_to icon('fas', 'edit'), edit_post_path, class: "btn btn-outline-danger mr-4" %>
							<button type="button" class="btn btn-outline-dark float-right" data-toggle="modal" data-target="#deleteModal"><%= icon('far', 'trash-alt') %></button>
						</div>
					<% end %>
				<% end %>
				<hr class="mt-4 mb-4">
				<p class="mb-1">
					<%= simple_format(h(@post.body)) %>
				</p>
				<% if @images.present? %>
					<% @images.each do |image| %>
						<%= image_tag image, class: "img-thumbnail" %>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-10">
			<% if logged_in? %>
				<div class="form-group">
					<%= form_with url: post_comments_path(@post), local: true do |form| %>
						<div class="input-group">
							<%= form.text_field :body, class: "form-control", placeholder: "Say something...", required: true %>
							<div class="input-group-append">
								<%= form.submit "Reply", class: "btn btn-danger" %>
							</div>
						</div>
					<% end %>
				</div>
			<% else %>
				<div class="form-group">
					<div class="card">
						<div class="card-body">
							<h6><%= link_to "Log in", login_path %> to comment on this post!</h6>
						</div>
					</div>
				</div>
			<% end %>
			<div class="list-group">
				<% unless @post.comments.empty? %>
					<%= render partial: "partials/comment", collection: @post.comments, locals: {post: @post} %>
				<% else %>
					<div class="alert alert-info">No comments yet. Be the first to comment!</div>
				<% end %>
			</div>
		</div>
	</div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Delete</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this post?
      </div>
      <div class="modal-footer">
		<%= form_with model: @post, method: :delete, class: 'form-horizontal', local: true do |p| %>
	        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
	        <%= p.submit "Delete Post", class: "btn btn-danger" %>
	    <% end %>
      </div>
    </div>
  </div>
</div>