<div class="card mb-4">
	<div class="card-body">
		<h5 class="card-title mb-4">
			<% if post.user.profile_avatar.attached? %>
				<%= image_tag post.user.profile_avatar, class: "rounded-circle", size:"50x50" %>
			<% else %>
				<%= image_tag "profile_avatars/default.png", class: "rounded-circle", size:"50x50" %>
			<% end %>
			<%= link_to user_path(post.user), class: "profile-link font-weight-bold" do %>
				<%= post.user.full_name %>
			<% end %>
		</h5>
		<h6 class="font-weight-bold"><%= post.title %></h6>
		<hr>
		<p class="card-text mb-1">
			<%= simple_format(truncate(post.body, length: 100)) %>
		</p>
		<% if post.first_image.present? %>
			<%= image_tag post.first_image, class: "img-thumbnail" %>
		<% end %>
	</div>
	<div class="card-footer">
		<%= link_to("Read more...", post_path(post) , class: "btn btn-outline-dark") %>
		<small class="text-muted float-right"><%= time_ago_in_words(post.created_at) + " ago" %></small>
	</div>
</div>