<% if posts.length > 0 %>
	<div class="list-group">
		<div style="height: 75vh !important; overflow-y: scroll;">
			<%= render partial: "partials/post", collection: posts %>
		</div>
	</div>
	<%= paginate posts, window: 3 %>
<% else %>
	<div class="alert alert-info">
		No posts yet.
	</div>
<% end %>