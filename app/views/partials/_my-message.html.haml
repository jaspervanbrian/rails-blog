                .embed-responsive.embed-responsive-16by9.m-2
                  = video_tag(url_for(attachment), class: "embed-responsive-item", controls: "", data: {toggle: "tooltip", placement: "left"}, title: message.created_at.strftime("%b %d, %l:%M %p"))
  - else
    - session[:temp_user_id] = message.user.id
    .row
      %span.d-none{data: {sender: message.user.id}}
      .col-8.offset-4
        .row
