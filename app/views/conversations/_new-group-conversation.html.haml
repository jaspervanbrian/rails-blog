.modal.fade#newGroupConversation{tabindex: -1, role: "dialog", aria: {labelledby: "newGroupConversationTitle", hidden: true}}
  .modal-dialog.modal-lg{role: "document"}
    .modal-content
      .modal-header
        %h6.modal-title#newGroupConversationTitle New group conversation
        %button.close{type: "button", aria: {label: "Close"}, data: {dismiss: "modal"}}
          %span{aria: {hidden: true}}
            = icon("fas", "times")
      .modal-body
        .row
          .col-12
            %hr.bg-danger
            %input.form-control{placeholder: "Conversation name"}
            %hr.bg-danger
        .row
          .col-7.border-right.border-danger
            .row
              .col-10
                %input.form-control{placeholder: "Enter email of user"}
              .col-2
                %button.btn.btn-danger
                  = icon("fas", "plus")
          .col-5
            %small Added members:
      .modal-footer
        %button.btn.btn-secondary{data: {dismiss: "modal"}} Close
        %button.btn.btn-danger Create
